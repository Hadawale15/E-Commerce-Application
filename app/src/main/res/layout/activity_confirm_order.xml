<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#DCD4F1"
    android:layout_height="match_parent"
    tools:context=".FrontSection.ConfirmOrder_Activity">

    <TextView
        android:id="@+id/Confirm_Order_text1_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Order"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="20sp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/Confirm_Order_cardView_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_above="@+id/Confirm_Order_Button_id"
        android:layout_below="@id/Confirm_Order_text1_id">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            >


            <TextView
                android:id="@+id/Confirm_Order_totalAmount_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rsxxxxxx"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="@color/purple_500"
                android:layout_centerHorizontal="true" />


            <EditText
                android:layout_below="@+id/Confirm_Order_totalAmount_id"
        android:id="@+id/Confirm_Order_Name_id"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Enter your Name"
        android:textSize="15sp"
                android:padding="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edittextbackground"
         />

    <EditText
        android:id="@+id/Confirm_Order_Mobile_id"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Enter your mobile no"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edittextbackground"
        android:layout_below="@id/Confirm_Order_Name_id"/>

    <EditText
        android:id="@+id/Confirm_Order_Addr_id"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Enter your address"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edittextbackground"
        android:layout_below="@id/Confirm_Order_Mobile_id"/>
    <EditText
        android:id="@+id/Confirm_Order_City_id"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Enter your city name"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edittextbackground"
        android:layout_below="@id/Confirm_Order_Addr_id"/>

    <EditText
        android:id="@+id/Confirm_Order_Pin_id"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Enter PinCode"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittextbackground"
        android:layout_below="@id/Confirm_Order_City_id"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/Confirm_Order_Button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="25dp"
        android:text="Confirm order"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"

        android:background="@drawable/button_beckground1"/>



</RelativeLayout>