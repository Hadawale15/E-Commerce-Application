<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerRegistration"
    android:background="#EDF6E6">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/seller"
        android:id="@+id/seller_Image21"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_Image21"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/sellerCard_id">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sellers Registration"
      android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#599127"
        android:id="@+id/Seller_Text22"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter Name"
        android:layout_below="@+id/Seller_Text22"
    android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/selleredittextback"
         android:textSize="15sp"
        android:drawableLeft="@drawable/sellerperson_icon"
        android:drawablePadding="5dp"
        android:id="@+id/Name_edittext23"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter Phone Number"
        android:layout_below="@+id/Name_edittext23"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/selleredittextback"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/sellerphone_icon"
        android:drawablePadding="5dp"
        android:textSize="15sp"

        android:id="@+id/phone_edittext24"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter Email"
        android:layout_below="@+id/phone_edittext24"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/selleredittextback"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/email_icon"
        android:textSize="15sp"
        android:drawablePadding="5dp"
        android:id="@+id/email_edittext25"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter Password"
        android:layout_below="@+id/email_edittext25"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="5dp"
        android:background="@drawable/selleredittextback"
        android:textSize="15sp"

        android:id="@+id/password_edittext26"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter Shop or seller address"
        android:layout_below="@+id/password_edittext26"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/selleredittextback"
        android:textSize="15sp"
        android:drawableLeft="@drawable/sellerlocation_icon"
        android:drawablePadding="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/address_edittext27"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sellerCard_id"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Register"
        android:textSize="15sp"
        android:padding="9dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:backgroundTint="#599127"
        android:id="@+id/Register_button28_id"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Register_button28_id"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="30dp"
        android:text="Already register? Login"
        android:layout_marginTop="10dp"

        android:textSize="22sp"
        android:textStyle="bold"
        android:id="@+id/AlreadyRegister_button29_id"/>




</RelativeLayout>