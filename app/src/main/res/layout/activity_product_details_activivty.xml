<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".productDetailsActivivty">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:src="@drawable/profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/Selected_product_Img_id"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product name"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Selected_product_Img_id"
        android:layout_marginTop="10dp"
        android:id="@+id/Selected_product_name_id"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product prize"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Selected_product_name_id"
        android:layout_marginTop="10dp"
        android:id="@+id/Selected_product_prize_id"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Description"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Selected_product_prize_id"
        android:layout_marginTop="10dp"
        android:id="@+id/Selected_product_Description_id"/>

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/elegant_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Selected_product_Description_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:elevation="6dp"
        app:backGroundColor="@color/purple_500"
        app:finalNumber="10"
        app:initialNumber="1"
        app:textSize="10sp">

    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

   <Button
       android:id="@+id/Selected_product_added_cart_id"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Add to Cart"
       android:textSize="20sp"
       android:layout_below="@id/elegant_button_id"
       android:layout_marginRight="15dp"
       android:layout_marginLeft="15dp"
       android:layout_centerHorizontal="true"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="40dp"/>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>