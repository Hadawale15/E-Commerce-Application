<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF7FA"
    tools:context=".Sellers.ProductCatagory">

    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select product Catagory"
        android:textSize="25sp"
        android:textColor="#4E0DEA"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>


       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_below="@+id/text_id">


           <ScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">



                   <TextView
                       android:id="@+id/electronics_id"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Electronics"
                       android:textSize="25sp"
                       android:textStyle="bold"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="20dp"
                       android:layout_marginBottom="10dp"/>


               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:layout_marginBottom="7dp"
                   android:layout_marginTop="8dp"
                   android:layout_marginRight="15dp"
                   android:id="@+id/cardview1"
                   app:cardElevation="10dp"
                   app:cardCornerRadius="15dp"
                  >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:weightSum="2"
                   android:background="#CBF0F4"
                   android:orientation="vertical">





        <LinearLayout
            android:id="@+id/row1_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/electronics_id"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/headphones_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/headphoness"
                android:layout_margin="15dp" />

            <ImageView
                android:id="@+id/watch_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/watches"
                android:layout_margin="15dp"/>

            <ImageView
                android:id="@+id/laptop_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/laptops"
                android:layout_margin="15dp"/>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/row2_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/row1_id"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/mobiles_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/mobiles"
                android:layout_margin="15dp"/>

            <ImageView
                android:id="@+id/radios_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/radio"
                android:layout_margin="15dp"/>

            <ImageView
                android:id="@+id/Tvs_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/tv"
                android:layout_margin="15dp"/>



        </LinearLayout>


               </LinearLayout>


               </androidx.cardview.widget.CardView>



                   <TextView
                       android:id="@+id/fashion_id"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Fashion"
                       android:layout_below="@+id/row2_id"
                       android:textSize="25sp"
                       android:textStyle="bold"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="20dp"
                       android:layout_marginBottom="10dp"/>
               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:layout_marginBottom="7dp"
                   android:layout_marginTop="8dp"
                   android:layout_marginRight="15dp"
                   android:id="@+id/cardview2"
                   app:cardElevation="10dp"
                   app:cardCornerRadius="15dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:weightSum="2"
                   android:background="#CBF0F4"
                   android:orientation="vertical">



        <LinearLayout
            android:id="@+id/row3_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/fashion_id"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/female_dresses_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/female_dresses"
                android:layout_margin="15dp"/>

            <ImageView
                android:id="@+id/sun_glasses_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/glasses"
                android:layout_margin="15dp"/>

            <ImageView
                android:id="@+id/hats_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/hats"
                android:layout_margin="15dp"/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/row4_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/row3_id"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/purses_bags_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/purses_bags"
                android:layout_margin="15dp"/>

            <ImageView
                android:id="@+id/shoes_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/shoess"
                android:layout_margin="15dp"/>

            <ImageView
                android:id="@+id/sports_shirt_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sports"
                android:layout_margin="15dp"/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/row5_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/row4_id"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/sweathers_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sweather"
                android:layout_margin="15dp"/>

            <ImageView
                android:id="@+id/tshirts_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/tshirts"
                android:layout_margin="15dp"/>

            <ImageView
                android:id="@+id/hollyball_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/hollyboll"
                android:layout_margin="15dp"/>



        </LinearLayout>

               </LinearLayout>

               </androidx.cardview.widget.CardView>

               </LinearLayout>
           </ScrollView>

       </RelativeLayout>
</RelativeLayout>