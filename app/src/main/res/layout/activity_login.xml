<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/image_id"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/firstpagelogo"/>



    <EditText
        android:id="@+id/mobile_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Mobile Number"
        android:textSize="20sp"
        android:layout_below="@+id/image_id"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/user_icon"
        android:drawablePadding="10dp"
        android:background="@drawable/button_background2"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:inputType="text"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/purple_500"
        android:padding="15dp"/>



    <EditText
        android:id="@+id/pass1_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:textSize="20sp"
        android:layout_below="@+id/mobile_id"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background2"
        android:drawableLeft="@drawable/paassword_icon"
        android:drawablePadding="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:inputType="textWebPassword"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/purple_500"
        android:padding="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_below="@id/pass1_id">

        <com.rey.material.widget.CheckBox
            android:id="@+id/checkbox_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Material.Drawable.CheckBox"
            android:text="Keep Me Login"
            android:textColor="@color/purple_500"
            app:cbd_strokeColor="@color/purple_500"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/forgotPas_idd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/purple_500"
            android:text="Forgot Password"
            android:layout_marginLeft="75dp"/>


    </LinearLayout>

    <Button
        android:id="@+id/mainlogin_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Login"
        android:textSize="20sp"
        android:background="@drawable/button_beckground1"
        android:layout_below="@+id/pass1_id"
        android:layout_marginTop="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/admin_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainlogin_id"
        android:text="I'm an Admin?"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"/>

    <TextView
        android:id="@+id/notadmin_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainlogin_id"
        android:text="I'm not an Admin?"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:visibility="invisible"/>





</RelativeLayout>