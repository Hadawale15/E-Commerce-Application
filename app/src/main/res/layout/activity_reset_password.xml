<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPassword"

    android:background="@drawable/reset_back">


    <ImageView
        android:id="@+id/a13"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/firstpagelogo"/>




    <TextView
        android:id="@+id/a11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:text="Reset password"
        android:textSize="40sp"
        android:layout_below="@+id/a13"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/a12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile"
        android:textColor="@color/purple_500"
        android:textSize="30sp"
        android:layout_below="@+id/a11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>



    <EditText
        android:id="@+id/reset_pass_id1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new Password"
        android:textSize="20sp"
        android:padding="11dp"
        android:drawableLeft="@drawable/user_icon"
        android:drawablePadding="10dp"
        android:layout_below="@+id/a12"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_background2"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:textColorHint="@color/purple_500"
        android:textColor="@color/purple_500"
        android:inputType="text"/>

    <EditText
        android:id="@+id/confirm_reset_pass_id2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:textSize="20sp"
        android:padding="11dp"
        android:layout_below="@+id/reset_pass_id1"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_background2"
        android:drawableLeft="@drawable/phone_icon"
        android:drawablePadding="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:textColorHint="@color/purple_500"
        android:textColor="@color/purple_500"
        android:inputType="number"/>




    <Button
        android:id="@+id/reset_pass_button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:layout_marginEnd="12dp"
        android:background="@drawable/button_beckground1"
        android:layout_marginStart="12dp"
        android:padding="11dp"
        android:layout_below="@+id/confirm_reset_pass_id2"
        android:layout_marginTop="20dp"/>





</RelativeLayout>