<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrontSection.NumberVerifyActivity">



    <ImageView
        android:id="@+id/I11"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:src="@drawable/verify_phone"/>

    <TextView
        android:id="@+id/Te11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Phone"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_below="@id/I11"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/te11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You will receive 6 digit code for phone number verification"
        android:textSize="20dp"
        android:textStyle="bold"
       android:layout_below="@+id/Te11"
        android:layout_marginLeft="10dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/te11"
        android:id="@+id/card11">


        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            tools:ignore="MissingClass" />


        <EditText

            android:id="@+id/number_txt_id"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="right" />
    </androidx.cardview.widget.CardView>


        <Button
        android:id="@+id/get_otp_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get otp"
        android:layout_below="@+id/card11"
        android:layout_marginTop="10dp"/>



</RelativeLayout>